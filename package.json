{
    "name": "mencius",
    "version": "1.0.0",
    "description": "",
    "repository": "https://github.com/IvanWoo/mencius",
    "author": "Yifan Wu",
    "license": "MIT",
    "scripts": {
        "clean": "rimraf .cache build out dist",
        "prep": "yarn clean && mkdir -p out",
        "build": "yarn prep && parcel build index.html -d out --no-source-maps --no-cache --experimental-scope-hoisting --detailed-report --public-url ./",
        "start": "yarn prep && parcel index.html -p 8080 --open -d out",
        "doc": "npx madge --extensions ts --dot ./src/ > ./doc/overview.gv"
    },
    "dependencies": {
        "@thi.ng/api": "^6.10.1",
        "@thi.ng/atom": "^4.1.3",
        "@thi.ng/checks": "^2.6.2",
        "@thi.ng/hdom": "^8.0.20",
        "@thi.ng/hiccup-carbon-icons": "^1.0.22",
        "@thi.ng/interceptors": "^2.2.14",
        "@thi.ng/router": "^2.0.17"
    },
    "devDependencies": {
        "autoprefixer": "^9.5.1",
        "concurrently": "^4.1.0",
        "cross-env": "^5.2.0",
        "cssnano": "^4.1.10",
        "parcel-bundler": "^1.12.4",
        "postcss-cli": "^6.1.2",
        "rimraf": "^2.6.3",
        "tailwindcss": "^1.0",
        "terser": "^4.4.0",
        "typescript": "^3.7.2"
    },
    "browserslist": [
        "last 3 Chrome versions"
    ],
    "browser": {
        "process": false
    }
}